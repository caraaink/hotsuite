{
  "version": 2,
  "builds": [
    {
      "src": "api/upload.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/refresh-token.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/upload",
      "dest": "api/upload.js"
    },
    {
      "src": "/api/refresh-token",
      "dest": "api/refresh-token.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"  // Ubah dari "public/$1" ke "public/index.html"
    }
  ],
  "env": {
    "GITHUB_TOKEN": "@github_token",
    "CLIENT_SECRET": "@client_secret"
  },
  "functions": {
    "api/upload.js": {
      "includeFiles": "{api/**,config.json}"
    },
    "api/refresh-token.js": {
      "includeFiles": "{api/**,config.json}"
    }
  }
}